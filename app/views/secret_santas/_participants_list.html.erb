        <span><%= member_display_name(member) %></span>
        <% if assignment = @secret_santa.secret_santa_assignments.find_by(giver: member) %>
          <span style="font-size: 0.8rem; color: #28a745;">âœ“ Assigned</span>
        <% end %>
      </div>
