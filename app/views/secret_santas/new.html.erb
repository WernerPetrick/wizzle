<% content_for :title, "Create Secret Santa - #{@community.name}" %>

<div class="page-container">
  <div class="content-section" style="max-width: 600px; margin: 0 auto;">
    <%= render 'shared/page_header',
        title: 'Create Secret Santa',
        back_link: { path: @community, text: "Back to #{@community.name}" } %>

    <div class="sleek-card" style="background: #fff; border-radius: 1.2rem; border: 1px solid #eee; padding: 2rem; box-shadow: 0 2px 12px rgba(0,0,0,0.03);">
      <%= form_with model: [@community, @secret_santa], local: true, url: community_secret_santas_path(@community) do |form| %>
        <%= render 'form_fields', form: form %>
        <%= render 'shared/form_actions',
            form: form,
            submit_text: 'Create Secret Santa',
            cancel_path: @community,
            cancel_text: 'Cancel' %>
      <% end %>
    </div>
  </div>
</div>