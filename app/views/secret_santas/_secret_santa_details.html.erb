<div style="background: #f8f9fa; border-radius: 1rem; padding: 2rem; margin-bottom: 2rem;">
  <div style="display: grid; gap: 1rem;">
    <div style="display: flex; align-items: center; gap: 1rem;">
      <%= secret_santa_status_badge(@secret_santa) %>
      <span style="color: #666; font-size: 0.9rem;">
        <%= pluralize(@secret_santa.participant_count, 'participant') %>
      </span>
    </div>
    
    <div>
      <strong>Gift Exchange Date:</strong>
      <%= @secret_santa.event_date.strftime("%B %d, %Y") %>
    </div>
    
    <% if @secret_santa.reveal_date %>
      <div>
        <strong>Reveal Date:</strong>
        <%= @secret_santa.reveal_date.strftime("%B %d, %Y") %>
      </div>
    <% end %>
    
    <% if @secret_santa.budget_limit %>
      <div>
        <strong>Budget Limit:</strong>
        <%= format_budget(@secret_santa.budget_limit) %>
      </div>
    <% end %>
    
    <% if @secret_santa.description.present? %>
      <div>
        <strong>Description:</strong>
        <p style="margin: 0.5rem 0 0 0; line-height: 1.5;"><%= @secret_santa.description %></p>
      </div>
    <% end %>
  </div>
</div>