<% if @secret_santa.errors.any? %>
  <div style="background: #fee; border: 1px solid #fcc; color: #c00; padding: 1rem; border-radius: 0.5rem; margin-bottom: 1.5rem;">
    <h4>Please fix the following errors:</h4>
    <ul style="margin: 0.5rem 0 0 1rem;">
      <% @secret_santa.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render 'shared/form_field',
    form: form,
    object: @secret_santa,
    field_name: :title,
    field_type: :text,
    label_text: 'Secret Santa Title',
    field_options: {
      style: "width: 100%; padding: 0.7rem; border: 1px solid #ddd; border-radius: 0.5rem; font-size: 1rem;",
      placeholder: "Christmas Secret Santa 2025"
    } %>

<%= render 'shared/form_field',
    form: form,
    object: @secret_santa,
    field_name: :event_date,
    field_type: :date,
    label_text: 'Gift Exchange Date',
    field_options: {
      style: "width: 100%; padding: 0.7rem; border: 1px solid #ddd; border-radius: 0.5rem; font-size: 1rem;",
      min: Date.current
    },
    help_text: "When gifts should be exchanged" %>

<%= render 'shared/form_field',
    form: form,
    object: @secret_santa,
    field_name: :reveal_date,
    field_type: :date,
    label_text: 'Reveal Date (Optional)',
    field_options: {
      style: "width: 100%; padding: 0.7rem; border: 1px solid #ddd; border-radius: 0.5rem; font-size: 1rem;"
    },
    help_text: "When Secret Santa identities are revealed" %>

<%= render 'shared/form_field',
    form: form,
    object: @secret_santa,
    field_name: :budget_limit,
    field_type: :text,
    label_text: 'Budget Limit (Optional)',
    field_options: {
      style: "width: 100%; padding: 0.7rem; border: 1px solid #ddd; border-radius: 0.5rem; font-size: 1rem;",
      placeholder: "25.00",
      step: 0.01
    },
    help_text: "Suggested spending limit" %>

<%= render 'shared/form_field',
    form: form,
    object: @secret_santa,
    field_name: :description,
    field_type: :textarea,
    label_text: 'Description (Optional)',
    field_options: {
      style: "width: 100%; padding: 0.7rem; border: 1px solid #ddd; border-radius: 0.5rem; font-size: 1rem; resize: vertical; min-height: 100px;",
      placeholder: "Add rules, themes, or special instructions for participants..."
    },
    help_text: "Optional details about gift exchange rules, themes, or special instructions" %>