<header class="page-header" style="margin-bottom: 2rem;">
  <% if local_assigns[:back_link] %>
    <div style="margin-bottom: 1rem;">
      <%= link_to back_link[:path], style: "color: #666; text-decoration: none;" do %>
        ‚Üê <%= back_link[:text] %>
      <% end %>
    </div>
  <% end %>

  <div style="display: flex; justify-content: space-between; align-items: <%= local_assigns[:actions] ? 'center' : 'start' %>;">
    <div>
      <h1 class="page-title" style="font-size: 2.5rem; font-weight: 200; color: #000; margin-bottom: <%= local_assigns[:subtitle] ? '0.5rem' : '0' %>; text-align: center;">
        <%= title %>
      </h1>
      <% if local_assigns[:subtitle] %>
        <p style="color: #666; font-size: 1rem; margin: 0; text-align: center;">
          <%= subtitle %>
        </p>
      <% end %>
    </div>
    
    <% if local_assigns[:actions] %>
      <div class="header-actions">
        <%= actions %>
      </div>
    <% end %>
  </div>
</header>