<% content_for :title, "How Wizzle Works – Simple, Thoughtful Gifting" %>
<% content_for :meta_description, "Learn how Wizzle makes gift-giving magical. Create wishlists, invite friends, and coordinate gifts — all in a clean, private, and joyful way." %>
<% content_for :og_title, "How Wizzle Works" %>
<% content_for :og_description, "See how Wizzle helps you share wishes, avoid duplicate gifts, and make celebrations more meaningful — all with a few simple steps." %>

<main class="how-it-works-page">
  <section class="hero-section">
    <div class="hero-container">
      <h1 class="page-title">How it Works</h1>
      <p class="page-subtitle">Create wishlists, share with friends, and make gift-giving magical</p>
    </div>
  </section>

  <section class="steps-section">
    <div class="steps-container">
      
      <!-- Step 1: Create Account -->
      <div class="step-card">
        <div class="step-number">
          <span class="number">1</span>
        </div>
        <div class="step-content">
          <div class="step-text">
            <h2 class="step-title">Create Your Account</h2>
            <p class="step-description">
              Sign up for your free account to get started. It only takes a minute and you'll be ready to create your first wishlist!
            </p>
            <ul class="step-features">
              <li>Free account creation</li>
              <li>Secure and private</li>
              <li>Quick setup process</li>
            </ul>
          </div>
          <div class="step-screenshot">
            <div class="screenshot-placeholder">
              <div class="placeholder-content">
                <div class="screenshot-icon">
                  <%= image_tag "profile_picture.png" %>
                </div>
                <p class="placeholder-text">Sign up page screenshot</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Step 2: Create Wishlist -->
      <div class="step-card reverse">
        <div class="step-number">
          <span class="number">2</span>
        </div>
        <div class="step-content">
          <div class="step-screenshot">
            <div class="screenshot-placeholder">
              <div class="placeholder-content">
                <div class="screenshot-icon">
                  <%= image_tag "pen_paper.png" %>
                </div>
              </div>
            </div>
          </div>
          <div class="step-text">
            <h2 class="step-title">Create Your Wishlist</h2>
            <p class="step-description">
              Add items you'd love to receive. Include details, links, and preferences to help your friends choose the perfect gifts.
            </p>
            <ul class="step-features">
              <li>Add unlimited items</li>
              <li>Include photos and links</li>
              <li>Set priorities and notes</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Step 3: Invite Friends -->
      <div class="step-card">
        <div class="step-number">
          <span class="number">3</span>
        </div>
        <div class="step-content">
          <div class="step-text">
            <h2 class="step-title">Invite Your Friends</h2>
            <p class="step-description">
              Share your wishlist with friends and family. They can see what you'd like and coordinate with each other to avoid duplicate gifts.
            </p>
            <ul class="step-features">
              <li>Easy friend invitations</li>
              <li>Private sharing options</li>
              <li>Gift coordination features</li>
            </ul>
          </div>
          <div class="step-screenshot">
            <div class="screenshot-placeholder">
              <div class="placeholder-content">
                <div class="screenshot-icon">
                  <%= image_tag "friends.png" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Step 4: Gift Coordination -->
      <div class="step-card reverse">
        <div class="step-number">
          <span class="number">4</span>
        </div>
        <div class="step-content">
          <div class="step-screenshot">
            <div class="screenshot-placeholder">
              <div class="placeholder-content">
                <div class="screenshot-icon">
                  <%= image_tag "gift.png" %>
                </div>
              </div>
            </div>
          </div>
          <div class="step-text">
            <h2 class="step-title">Coordinate Gifts</h2>
            <p class="step-description">
              Friends can mark items they plan to buy, send questions about preferences, and coordinate to ensure no duplicate gifts.
            </p>
            <ul class="step-features">
              <li>Mark items as "being bought"</li>
              <li>Ask questions privately</li>
              <li>Avoid duplicate purchases</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Step 5: Enjoy the Magic -->
      <div class="step-card">
        <div class="step-number">
          <span class="number">5</span>
        </div>
        <div class="step-content">
          <div class="step-text">
            <h2 class="step-title">Enjoy the Magic</h2>
            <p class="step-description">
              Receive thoughtful gifts that you actually want! Our platform makes gift-giving more meaningful for everyone involved.
            </p>
            <ul class="step-features">
              <li>Receive perfect gifts</li>
              <li>Happy friends and family</li>
              <li>Stress-free celebrations</li>
            </ul>
          </div>
          <div class="step-screenshot">
            <div class="screenshot-placeholder">
              <div class="placeholder-content">
                <div class="screenshot-icon">
                  <%= image_tag "magic.png" %>
                </div>
                <p class="placeholder-text">Happy celebration screenshot</p>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </section>

  <!-- Features Overview -->
  <section class="features-overview">
    <div class="features-container">
      <h2 class="features-title">Key Features</h2>
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">
            <%= image_tag "lock.png" %>
          </div>
          <h3 class="feature-name">Private & Secure</h3>
          <p class="feature-desc">Your wishlists are only visible to friends you invite</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <%= image_tag "speech_bubble.png" %>
          </div>
          <h3 class="feature-name">Ask Questions</h3>
          <p class="feature-desc">Friends can ask about preferences privately</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <%= image_tag "target.png" %>
          </div>
          <h3 class="feature-name">No Duplicates</h3>
          <p class="feature-desc">Coordinate purchases to avoid duplicate gifts</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <%= image_tag "mobile.png" %>
          </div>
          <h3 class="feature-name">Easy to Use</h3>
          <p class="feature-desc">Simple interface that works on all devices</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="cta-section">
    <div class="cta-container">
      <h2 class="cta-title">Ready to Get Started?</h2>
      <p class="cta-description">Join thousands of users making gift-giving magical</p>
      <%= link_to "Create Your Account", (signed_in? ? profile_path : new_user_path), class: "cta-button" %>
    </div>
  </section>
</main>
