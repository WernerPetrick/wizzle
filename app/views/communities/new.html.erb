<div class="page-container">
  <div class="content-section" style="max-width: 600px; margin: 0 auto;">
    <h1 class="page-title" style="font-size: 2.5rem; font-weight: 200; color: #000; margin-bottom: 2rem; text-align: center;">
      Create a Community
    </h1>

    <div class="sleek-card" style="background: #fff; border-radius: 1.2rem; border: 1px solid #eee; padding: 2rem; box-shadow: 0 2px 12px rgba(0,0,0,0.03);">
      <%= form_with model: @community, local: true do |f| %>
        <% if @community.errors.any? %>
          <div style="background: #fee; border: 1px solid #fcc; color: #c00; padding: 1rem; border-radius: 0.5rem; margin-bottom: 1.5rem;">
            <h4>Please fix the following errors:</h4>
            <ul>
              <% @community.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div style="margin-bottom: 1.5rem;">
          <%= f.label :name, "Community Name", style: "font-weight: 500; color: #222;" %><br>
          <%= f.text_field :name, required: true, style: "width: 100%; padding: 0.7rem; border-radius: 0.5rem; border: 1px solid #ccc; margin-top: 0.3rem;" %>
        </div>

        <div style="margin-bottom: 2rem;">
          <%= f.label :description, "Description", style: "font-weight: 500; color: #222;" %><br>
          <%= f.text_area :description, rows: 4, style: "width: 100%; padding: 0.7rem; border-radius: 0.5rem; border: 1px solid #ccc; margin-top: 0.3rem;" %>
        </div>

        <div class="field">
          <%= f.label :avatar, "Profile Picture" %><br>
          <%= f.file_field :avatar, direct_upload: true %>
          <% if @community.avatar.attached? %>
            <div style="margin-top: 1rem;">
              <%= image_tag @community.avatar, style: "border-radius: 50%;" %>
              <br>
              <%= button_to "Remove Picture", remove_avatar_community_path(@community), method: :delete, data: { confirm: "Remove profile picture?" }, class: "btn small danger" %>
            </div>
          <% end %>
        </div>

        <div style="display: flex; gap: 1rem; justify-content: space-between;">
          <%= link_to "Cancel", communities_path, class: "btn secondary" %>
          <%= f.submit "Create Community", class: "btn primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>