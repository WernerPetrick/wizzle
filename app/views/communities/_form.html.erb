<%= form_with(model: community, local: true, data: { turbo_frame: "community_header" }) do |f| %>
  <div style="display: flex; gap: 1.5rem; margin-bottom: 1.5rem;">
    <div style="flex: 1; display: flex; flex-direction: column; gap: 0.5rem;">
      <%= f.label :name, style: "font-weight: 500; color: #222;" %>
      <%= f.text_field :name, class: "input", style: "padding: 0.7rem 1rem; border-radius: 0.5rem; border: 1px solid #e0e0e0; font-size: 1.1rem;" %>
    </div>
    <div style="flex: 2; display: flex; flex-direction: column; gap: 0.5rem;">
      <%= f.label :description, style: "font-weight: 500; color: #222;" %>
      <%= f.text_area :description, class: "input", rows: 3, style: "padding: 0.7rem 1rem; border-radius: 0.5rem; border: 1px solid #e0e0e0; font-size: 1.1rem;" %>
    </div>
  </div>
  <div style="display: flex; flex-direction: column; gap: 0.5rem; margin-bottom: 1.5rem;">
    <%= f.label :avatar, "Profile Picture", style: "font-weight: 500; color: #222;" %>
    <%= f.file_field :avatar, class: "input", style: "padding: 0.5rem 0;" %>
    <% if community.avatar.attached? %>
      <div style="margin-top: 1rem;">
        <%= image_tag community.avatar, style: "border-radius: 50%; max-width: 120px; box-shadow: 0 2px 8px rgba(0,0,0,0.06);" %>
        <br>
        <label style="display: inline-block; margin-top: 0.5rem;">
          <%= f.check_box :remove_avatar %> Remove current picture
        </label>
      </div>
    <% end %>
  </div>
  <div class="actions" style="display: flex; gap: 1rem; align-items: center;">
    <%= f.submit "Update Community", class: "btn primary", style: "padding: 0.7rem 2rem; border-radius: 0.5rem; font-size: 1.1rem;" %>
  </div>
<% end %>