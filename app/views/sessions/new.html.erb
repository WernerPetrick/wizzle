<div id="clearance" class="sign-in">
  <h2>Welcome Back</h2>
  <p>Sign in to access your wishlists and connect with friends</p>

  <%= form_for :session, url: session_path do |form| %>
    <div class="text-field">
      <%= form.label :email, "Email Address" %>
      <%= form.email_field :email, placeholder: "your@email.com" %>
    </div>

    <div class="password-field">
      <%= form.label :password, "Password" %>
      <%= form.password_field :password, placeholder: "Enter your password" %>
    </div>

    <div class="submit-field">
      <%= form.submit "Sign In" %>
    </div>

    <div class="other-links">
      <% if Clearance.configuration.allow_sign_up? %>
        <p>
          Don't have an account? 
          <%= link_to "Sign up here", sign_up_path %>
        </p>
      <% end %>
      <% if Clearance.configuration.allow_password_reset? %>
        <p>
          <%= link_to "Forgot your password?", new_password_path %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>
