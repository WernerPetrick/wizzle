<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1 class="auth-title">Join Wizzle</h1>
      <p class="auth-subtitle">Create your account to start sharing wishlists with friends</p>
    </div>

    <div class="auth-form">
      <%= form_for @user, html: { class: "form" } do |form| %>
        <div class="form-group">
          <%= form.label :email, "Email Address", class: "form-label" %>
          <%= form.email_field :email, class: "form-input", placeholder: "your@email.com", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :password, "Password", class: "form-label" %>
          <%= form.password_field :password, class: "form-input", placeholder: "Enter a secure password", required: true %>
          <small class="form-help">Minimum 8 characters</small>
        </div>

        <div class="form-actions">
          <%= form.submit "Create Account", class: "btn-primary btn-full" %>
        </div>
      <% end %>
    </div>

    <div class="auth-footer">
      <p class="auth-links">
        Already have an account? 
        <%= link_to "Sign in here", sign_in_path, class: "auth-link" %>
      </p>
    </div>
  </div>

  <div class="auth-benefits">
    <h3 class="benefits-title">Why join Wizzle?</h3>
    <ul class="benefits-list">
      <li class="benefit-item">
        <span class="benefit-icon">📝</span>
        <span class="benefit-text">Create unlimited wishlists</span>
      </li>
      <li class="benefit-item">
        <span class="benefit-icon">🤝</span>
        <span class="benefit-text">Share with friends and family</span>
      </li>
      <li class="benefit-item">
        <span class="benefit-icon">🎁</span>
        <span class="benefit-text">Track gift progress</span>
      </li>
      <li class="benefit-item">
        <span class="benefit-icon">✨</span>
        <span class="benefit-text">Clean, simple interface</span>
      </li>
    </ul>
  </div>
</div>
